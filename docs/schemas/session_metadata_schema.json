{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Session Metadata Schema",
  "description": "Schema for recording session metadata",
  "required": [
    "session_id",
    "timestamp",
    "devices"
  ],
  "properties": {
    "session_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "duration": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "enum": [
        "completed",
        "failed",
        "in_progress"
      ]
    }
  }
}