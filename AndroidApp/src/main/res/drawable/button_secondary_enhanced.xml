<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_secondary_pressed" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/device_card_border" />
        </shape>
    </item>
    
    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_secondary" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/device_card_border" />
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/device_card_background" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/device_card_border" />
        </shape>
    </item>
</selector>