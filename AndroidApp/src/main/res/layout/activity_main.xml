<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <!-- App Bar with Material Design 3 Elevation -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:elevation="@dimen/elevation_card">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Multi-Sensor Recording"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Progress Indicator for Loading States -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom" />

    <!-- Optimized Main Content with ConstraintLayout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_padding">

            <!-- Recording Controls Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recordingCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/elevation_card"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding">

                    <!-- Preview Layout Switcher -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/previewLayoutToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dual View"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_view_module"
                        app:iconSize="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Camera Preview Container with switching capability -->
                    <FrameLayout
                        android:id="@+id/previewContainer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:layout_constraintTop_toBottomOf="@id/previewLayoutToggle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="16:9">

                        <!-- Dual Preview Layout (default) -->
                        <LinearLayout
                            android:id="@+id/dualPreviewLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:visibility="visible">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/rgbCameraCard"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_xs"
                                app:cardCornerRadius="@dimen/corner_radius_button"
                                app:cardElevation="@dimen/elevation_preview">

                                <TextureView
                                    android:id="@+id/cameraPreview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/cameraStatusOverlay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Initializing Camera..."
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:background="?attr/colorSurfaceVariant"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="@dimen/spacing_xs"
                                    android:text="RGB"
                                    android:textSize="10sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:background="@drawable/rounded_background"
                                    android:padding="@dimen/spacing_xs" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/thermalCameraCard"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/spacing_xs"
                                app:cardCornerRadius="@dimen/corner_radius_button"
                                app:cardElevation="@dimen/elevation_preview">

                                <SurfaceView
                                    android:id="@+id/thermalPreview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/thermalStatusOverlay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Initializing Thermal Camera..."
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:background="?attr/colorSurfaceVariant"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="@dimen/spacing_xs"
                                    android:text="THERMAL"
                                    android:textSize="10sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:background="@drawable/rounded_background"
                                    android:padding="@dimen/spacing_xs" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <!-- Single RGB Preview Layout -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/singleRgbLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/corner_radius_button"
                            app:cardElevation="@dimen/elevation_preview">

                            <TextureView
                                android:id="@+id/cameraPreviewFullscreen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/cameraStatusOverlayFullscreen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Initializing RGB Camera..."
                                android:gravity="center"
                                android:textSize="14sp"
                                android:background="?attr/colorSurfaceVariant"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|start"
                                android:layout_margin="@dimen/spacing_small"
                                android:text="RGB Camera - Fullscreen"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@drawable/rounded_background"
                                android:padding="@dimen/spacing_small" />

                        </androidx.cardview.widget.CardView>

                        <!-- Single Thermal Preview Layout -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/singleThermalLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/corner_radius_button"
                            app:cardElevation="@dimen/elevation_preview">

                            <SurfaceView
                                android:id="@+id/thermalPreviewFullscreen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/thermalStatusOverlayFullscreen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Initializing Thermal Camera..."
                                android:gravity="center"
                                android:textSize="14sp"
                                android:background="?attr/colorSurfaceVariant"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|start"
                                android:layout_margin="@dimen/spacing_small"
                                android:text="Thermal Camera - Fullscreen"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@drawable/rounded_background"
                                android:padding="@dimen/spacing_small" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                    <!-- Recording Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recordButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="Start Recording"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_record"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button"
                        app:layout_constraintTop_toBottomOf="@id/previewContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Recording Status -->
                    <TextView
                        android:id="@+id/recordingStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Ready to record"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/recordButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_spacing"
                app:cardElevation="@dimen/elevation_card"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:layout_constraintTop_toBottomOf="@id/recordingCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding">

                    <!-- Status Title -->
                    <TextView
                        android:id="@+id/statusTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="System Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Device Connection Grid -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/deviceStatusChips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:layout_constraintTop_toBottomOf="@id/statusTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/pcStatusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PC: Disconnected"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/shimmerStatusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shimmer: Disconnected"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/thermalStatusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thermal: Disconnected"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/networkStatusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network: Offline"
                            style="@style/Widget.Material3.Chip.Filter" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Storage Progress -->
                    <TextView
                        android:id="@+id/storageLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="Storage: 0% used"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintTop_toBottomOf="@id/deviceStatusChips"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/storageProgress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:progress="0"
                        app:indicatorColor="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/storageLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Card with ViewStub for Performance -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickActionsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_spacing"
                app:cardElevation="@dimen/elevation_card"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:layout_constraintTop_toBottomOf="@id/statusCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/quickActionsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Action Buttons Grid - Clean Text-Only Design -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/calibrationButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        android:text="Calibration"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:layout_constraintTop_toBottomOf="@id/quickActionsTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/devicesButton"
                        app:layout_constraintWidth_percent="0.48" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/devicesButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:text="Devices"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:layout_constraintTop_toBottomOf="@id/quickActionsTitle"
                        app:layout_constraintStart_toEndOf="@id/calibrationButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.48" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filesButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        android:text="Files"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:layout_constraintTop_toBottomOf="@id/calibrationButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/transferButton"
                        app:layout_constraintWidth_percent="0.48" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/transferButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:text="Transfer"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:layout_constraintTop_toBottomOf="@id/devicesButton"
                        app:layout_constraintStart_toEndOf="@id/filesButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.48" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ViewStub for Advanced Settings (Performance Optimization) -->
            <ViewStub
                android:id="@+id/advancedSettingsStub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_spacing"
                android:layout="@layout/layout_advanced_settings"
                app:layout_constraintTop_toBottomOf="@id/quickActionsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Loading State ViewStub -->
            <ViewStub
                android:id="@+id/loadingStateStub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout="@layout/layout_loading_state"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Error State ViewStub -->
            <ViewStub
                android:id="@+id/errorStateStub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout="@layout/layout_error_state"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Settings -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settingsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:contentDescription="Settings"
        app:srcCompat="@drawable/ic_settings"
        app:layout_anchor="@id/quickActionsCard"
        app:layout_anchorGravity="bottom|end"
        app:elevation="@dimen/elevation_fab" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>