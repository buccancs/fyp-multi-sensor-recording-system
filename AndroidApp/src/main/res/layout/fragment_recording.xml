<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/md_theme_surface">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensor Status"
                    android:textSize="18sp"
                    android:textColor="@color/md_theme_on_surface"
                    android:textStyle="bold"
                    android:contentDescription="Sensor connection status overview"
                    android:layout_marginBottom="12dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                <!-- Camera Status -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/cameraStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_videocam"
                            android:contentDescription="Camera status indicator"
                            app:tint="@color/statusIndicatorDisconnected"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/cameraStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera\nDisconnected"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="center"
                            android:contentDescription="Camera connection status"/>

                </LinearLayout>

                <!-- Thermal Status -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/thermalStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_thermostat"
                            android:contentDescription="Thermal camera status indicator"
                            app:tint="@color/statusIndicatorDisconnected"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/thermalStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thermal\nDisconnected"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="center"
                            android:contentDescription="Thermal camera connection status"/>

                </LinearLayout>

                <!-- GSR Status -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/gsrStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_sensors"
                            android:contentDescription="GSR sensor status indicator"
                            app:tint="@color/statusIndicatorDisconnected"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/gsrStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GSR\nDisconnected"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="center"
                            android:contentDescription="GSR sensor connection status"/>

                </LinearLayout>

                <!-- PC Controller Status -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/pcStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_computer"
                            android:contentDescription="PC controller status indicator"
                            app:tint="@color/statusIndicatorDisconnected"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/pcStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PC\nDisconnected"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="center"
                            android:contentDescription="PC controller connection status"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/md_theme_surface">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_recording"
                        android:contentDescription="Recording controls section icon"
                        app:tint="@color/recordingInactive"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Recording Controls"
                        android:textSize="18sp"
                        android:textColor="@color/md_theme_on_surface"
                        android:textStyle="bold"
                        android:contentDescription="Recording controls section"/>

                <TextView
                        android:id="@+id/recordingStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Record"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:contentDescription="Current recording status"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No active session"
                    android:textSize="12sp"
                    android:textColor="@color/textColorSecondary"
                    android:contentDescription="Current session status"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/startRecordingButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Start"
                        android:contentDescription="Start recording session with all connected sensors"
                        android:backgroundTint="@color/md_theme_primary"
                        android:textColor="@color/md_theme_on_primary"
                        app:icon="@drawable/ic_recording"
                        style="@style/Widget.Material3.Button"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/stopRecordingButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="Stop"
                        android:contentDescription="Stop current recording session and save data"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/md_theme_primary"
                        app:strokeColor="@color/md_theme_primary"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_stop"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/pauseRecordingButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Pause"
                        android:contentDescription="Pause current recording session temporarily"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/md_theme_secondary"
                        app:strokeColor="@color/md_theme_secondary"
                        app:strokeWidth="1dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/md_theme_surface">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Data Preview"
                    android:textSize="18sp"
                    android:textColor="@color/md_theme_on_surface"
                    android:textStyle="bold"
                    android:contentDescription="Live camera preview section"/>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:background="@color/preview_placeholder"
                    android:contentDescription="Camera preview area showing live video feed">

                <TextureView
                        android:id="@+id/rgbCameraPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="RGB camera live preview"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/previewPlaceholderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="RGB Camera preview will appear here"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:contentDescription="Camera preview placeholder message"/>

            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <TextView
                        android:id="@+id/sessionDurationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Duration: 00:00:00"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:contentDescription="Current recording session duration"/>

                <TextView
                        android:id="@+id/currentFileSizeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Size: 0 MB"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:gravity="end"
                        android:contentDescription="Current recording file size"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>